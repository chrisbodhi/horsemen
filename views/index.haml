%head
  %link{rel: "stylesheet", href: "/foundation.min.css"}
  %link{rel: "stylesheet", href: "/style.css"}

%body
  .row.topbar
    .large-10.medium-10.small-10.columns.a
      %a{href: '/about'} about
    .large-2.medium-2.small-2.columns.end
      %a{href: '/glossary'} glossary

  - unless Time.now.day % 7 == 0
    .row
      .large-centered.medium-centered.columns   
        %h3 
          Daily Warm-Up
        .warmup
          - if @warmup.title != ''  
            title:
            = @warmup.title
          %br
          %hr
          - if @warmup.reps != ''  
            reps:
            = @warmup.reps
          %br
          - if @warmup.movement != ''  
            movement:
            = @warmup.movement
          %br
          - if @warmup.weight != ''  
            weight:
            = @warmup.weight
          %br
          - if @warmup.description != ''
            description:
            = @warmup.description
          %br
          - if @warmup.length != ''  
            length:
            = @warmup.length


    .row
      .large-centered.medium-centered.columns
        %h4 Month
    .row
      .small-8.small-centered.columns
        %a.month{href: "/strength"} Strength
    .row
      .small-8.small-centered.columns
        %a.month{href: "/endurance"} Power Endurance
    .row
      .small-8.small-centered.columns
        %a.month{href: "/job"} Job-Specific
    .row
      .small-8.small-centered.columns
        %a.month{href: "/maintain"} Maintainence

  - else
    %h3 Rest Day